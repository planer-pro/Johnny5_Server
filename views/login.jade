extends template

block page
    .container
        form.form-signin(name="form", method="post")
            h2.form-signin-heading Please sign in
            label.sr-only(for='inputPassword') Password
            input#inputPassword.form-control(name="password", type='password', placeholder=(placeholderTxt))
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in